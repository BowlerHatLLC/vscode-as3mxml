<assembly xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
  <id>debug</id>
  <formats>
    <format>dir</format>
  </formats>
  <fileSets>
    <fileSet>
      <directory>..</directory>
      <includes>
        <include>LICENSE</include>
        <include>NOTICE</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>src/assembly</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>.vscodeignore</include>
        <include>README*</include>
        <include>CHANGELOG*</include>
        <include>actionscript.configuration.json</include>
        <include>mxml.configuration.json</include>
        <include>as3.png</include>
        <include>schemas/*</include>
        <include>syntaxes/*</include>
        <include>snippets/*</include>
        <include>bin/*</include>
        <include>jsfl/*</include>
        <include>frameworks/*</include>
        <include>playerglobal_docs/*</include>
        <include>intrinsics/**/*</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../check-royale-version/target</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../check-java-version/target</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../rcsh/target</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>rcsh*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../asconfigc/target</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>asconfigc*.jar</include>
        <include>commons-cli*.jar</include>
        <include>commons-compress-*.jar</include>
        <include>commons-io-*.jar</include>
        <include>commons-lang*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../language-server/target</directory>
      <outputDirectory>bin</outputDirectory>
      <includes>
        <include>language-server.jar</include>
        <include>org.eclipse.lsp4j*.jar</include>
        <include>org.eclipse.xtend*.jar</include>
        <include>org.eclipse.xtext*.jar</include>
        <include>commons-io-*.jar</include>
        <include>gson*.jar</include>
        <include>json-schema-validator*.jar</include>
        <include>slf4j*.jar</include>
        <include>jackson*.jar</include>
        <include>dom4j*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../language-server/target</directory>
      <outputDirectory>bundled-compiler</outputDirectory>
      <includes>
        <include>commons-*.jar</include>
        <include>compiler-*.jar</include>
        <include>formatter-*.jar</include>
        <include>linter-*.jar</include>
        <include>antlr-*.jar</include>
        <include>guava-*.jar</include>
        <include>failureaccess-*.jar</include>
        <include>jburg-*.jar</include>
        <include>jflex-*.jar</include>
        <include>lzma-sdk-*.jar</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../vscode-extension</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>package.json</include>
        <include>package.nls.json</include>
      </includes>
    </fileSet>
    <fileSet>
      <directory>../vscode-extension/target</directory>
      <outputDirectory>.</outputDirectory>
      <includes>
        <include>extension.js</include>
        <include>extension.js.map</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>